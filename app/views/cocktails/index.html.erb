<h1>Cocktails</h1>

<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail.name, cocktail_path(cocktail.id) %>
  <% end %>
</div>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>')"
</div>



<%= link_to "Add your own cocktail", new_cocktail_path %>

